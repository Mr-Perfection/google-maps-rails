<%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages',  object: f.object %>
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form_control', required: true %>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form_control', required: true %>

    <%= f.hidden_field :description %> 
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form_control', required: true %>
    
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form_control', required: true %>

    <%= f.submit yield(:buttom_text), class: "btn btn-default" %>
<% end %>