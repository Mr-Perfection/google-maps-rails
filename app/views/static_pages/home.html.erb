<div class="container container-large">
	<h1 class="text-center" id="google-header">Goooooogle Maps</h1>
	<div class="row">
		<div class="col-xs-10 col-lg-10 col-md-10 col-sm-10 col-xs-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
			<%= render 'post_form', cached: true%>	
		</div>
		</br>
		<div class="col-xs-10 col-lg-10 col-md-10 col-sm-10 col-xs-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
			<% if @posts.present? %>
				<%= render @posts, cached: true%>
			<% else %>
				<p>no posts yet!</p>
			<% end %>
		</div>
	</div>
	<script>
		$('#google-header').addClass('animated lightSpeedIn');
	</script>
</div>